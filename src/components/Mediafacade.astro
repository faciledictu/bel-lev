---
import type { CollectionEntry } from 'astro:content';
import Carousel from './Carousel.astro';

interface Props {
  entry: CollectionEntry<'mediafacades'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<article
  id={entry.id}
  class="rounded-top-4 bg-body min-vh-100 shadow-cards d-flex align-items-center"
  data-sticky="on-bottom">
  <div class="container px-4">
    <div class="row">
      <div class="col-12 col-md-4 col-xxl-6">
        <Carousel
          assets={entry.data.assets}
          id={entry.slug}
          collectionName={entry.collection}
        />
      </div>
      <div class="col">
        <div class="py-5">
          <h2 class="mb-4">
            Медиафасад<br />
            {entry.data.location}
          </h2>
          <Content />
          <div class="d-flex flex-row align-items-center pb-5">
            <div class="me-auto">
              <div>
                Площадь<br />
                <span class="h2">{entry.data.square} м²</span>
              </div>
              {
                entry.data.keyFeature && (
                  <div class="h2">{entry.data.keyFeature}</div>
                )
              }
            </div>
            <div>
              <a href="/tr/revolutsii_tr.pdf" class="btn btn-primary">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="currentColor"
                  class="bi bi-download"
                  viewBox="0 0 16 16">
                  <path
                    d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"
                  ></path>
                  <path
                    d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"
                  ></path>
                </svg>
                Техтребования
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</article>
